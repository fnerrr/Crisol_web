style.
    /* Estilos base del slider */
    .slider {
        width: 100%;
        margin: 0 auto;
    }

    .slider-track {
        width: 100%;
    }

    .slider-item {
        width: 100%;
        flex: 0 0 auto;
    }

    /* Ajustes para pantallas más grandes */
    @media (min-width: 640px) {
        .slider {
            max-width: 640px; /* Ajusta según necesites */
        }
    }

    @media (min-width: 768px) {
        .slider {
            max-width: 768px;
        }
    }

    @media (min-width: 1024px) {
        .slider {
            max-width: 1024px;
        }
    }

    /* Opcional: efecto de gradiente para pantallas grandes */
    @media (min-width: 640px) {
        .slider::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 150px;
            pointer-events: none;
        }
    }





